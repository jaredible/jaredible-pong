doctype html
html
  head
    title Pong
    link(rel='shortcut icon', href='/favicon.ico')
    link(rel='stylesheet', text='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css')
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
    link(rel='stylesheet', text='text/css', href='/css/styles.css')
  body
    #wrapper
      .container
        h1.title Pong
        #login-wrapper
          .login-container
            h3 Login
            form(class='login-form', action='/login', method='POST')
              input(type='text', placeholder='Username')
              input(type='submit', value='Join')
        #game-wrapper
          .game-container
            canvas
        #lobby-wrapper
          .lobby-container
            h3.lobby-title Players
            ul.player-list
              li.player-item
                span.player-name Player1
                span.player-actions
                  button Play
              li.player-item
                span.player-name Player2
                span.player-actions
                  button Play
              li.player-item
                span.player-name Player3
                span.player-actions
                  button Play
        #chat-wrapper
          .chat-container
            h3.chat-title
            ul.chat-messages
              li.chat-message Testing1
              li.chat-message Testing2
              li.chat-message Testing3
            form(class='chat-form')
              input(class='message-box', type='text', playerholder='Message')
              input(class='message-send', type='submit', value='Send')
    script(src='https://code.jquery.com/jquery-3.4.1.min.js', integrity='sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js', integrity='sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o', crossorigin='anonymous')
    script(src='/socket.io/socket.io.js')
    script(src='/js/main.js')
    script(src='/js/pong.js')
